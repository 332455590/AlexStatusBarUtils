<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.statusbar_alexleo.alexstatusbarutils.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:title="@string/app_name"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <Button
            android:id="@+id/main_common_toolbar_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.普通toolbar示例" />

        <Button
            android:id="@+id/main_img_act_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.图片示例" />

        <Button
            android:id="@+id/main_scroll_tb_act_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.可滑动的toolbar示例" />

        <Button
            android:id="@+id/main_scroll_tb_dl_act_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.可滑动的toolbar和drawerLayout组合示例" />
        <Button
            android:id="@+id/main_scroll_img_act_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.CollapsingToolbarLayout展示图片示例" />
        <Button
            android:id="@+id/main_fragment_act_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.fragment示例" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/main_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_view_menu" />


</android.support.v4.widget.DrawerLayout>
